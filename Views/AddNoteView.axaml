<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600"
             x:Class="NoteTalking.Views.AddNoteView">
  <Border Background="Red" CornerRadius="10" Grid.Row="0" Margin="0, 30, 0, 30">
    <Grid Grid.Row="0" ColumnDefinitions="*, 50, 50, 50">
      <TextBox x:Name="AddNoteBox" TextWrapping="Wrap" VerticalContentAlignment="Center" BorderThickness="0" Watermark="Заметка..." Grid.Column="0"></TextBox>
      <Button Grid.Column="1">
        <Image Source="avares://NoteTalking/Assets/Checklist.png"/>
      </Button>
      <Button Grid.Column="2">
        <Image Source="avares://NoteTalking/Assets/Brush.png"/>
      </Button>
      <Button Grid.Column="3">
        <Image Source="avares://NoteTalking/Assets/Picture.png"/>
      </Button>
    </Grid>
  </Border>
</UserControl>
